{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip3 install -r requirements.txt && cd site && npm install && npm run build"
  },
  "deploy": {
    "startCommand": "./run.sh",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
